<Window x:Class="ProjektSemestralny2.WindowSession"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemestralny2"
        mc:Ignorable="d"
        Title="WindowSession" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Vote for a Candidate" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="20"/>
        <ListBox Name="CandidatesListBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,50,10,10" Width="400" Height="300" SelectionMode="Single"/>
        <Button Name="VoteButton" Content="Vote" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10" Width="100" Click="VoteButton_Click"/>

    </Grid>
</Window>
